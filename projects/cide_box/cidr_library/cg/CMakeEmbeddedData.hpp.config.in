/// @addtogroup cidrlib
/// @{

#pragma once
#include <array>

namespace cidr {  
  template <std::size_t SizeV>
  using BinaryData = std::array<unsigned char, SizeV>; 
}

namespace cidr::data::embedded {
  static constexpr BinaryData<@SIZE_OF_kDefaultFont@> kDefaultFont = { @DATA_OF_kDefaultFont@ };
  static constexpr BinaryData<@SIZE_OF_kAppLogo64x64@> kAppLogo64x64 = { @DATA_OF_kAppLogo64x64@ };
  static constexpr BinaryData<@SIZE_OF_kAppLogo128x128@> kAppLogo128x128 = { @DATA_OF_kAppLogo128x128@ };
}

